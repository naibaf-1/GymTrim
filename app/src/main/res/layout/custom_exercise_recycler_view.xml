<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

    <ImageView
        android:id="@+id/imageView_ExerciseImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="2.5dp"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_ExerciseName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="Name"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_Notes"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="100"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="@string/placeholder_missing_note"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="18sp"
                android:textStyle="italic"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textView_Volume"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:text="Volume"
                android:textAlignment="viewEnd"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton_ExerciseDone"
        android:layout_height="55dp"
        android:clickable="false"
        android:contentDescription="Exercise completed"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/exercise_done_icon" />

</LinearLayout>