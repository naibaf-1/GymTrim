<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:visibility="visible">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_Repetition"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="@string/column_repetition"
        android:inputType="number|numberDecimal"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_Weight"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="@string/column_weight"
        android:inputType="number|numberDecimal"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_Time"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="@string/column_time"
        android:inputType="datetime|time"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_Distance"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="@string/column_distance"
        android:inputType="number|numberDecimal"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/imageButton_Tick"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_weight="0"
        android:contentDescription="Tick"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/check_icon" />

</LinearLayout>